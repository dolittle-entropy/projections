{
    "name": "portal.backend",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "author": "Dolittle",
    "license": "MIT",
    "scripts": {
        "start:dev": "cross-env NODE_ENV=development concurrently \"nodemon --inspect=0 -x tsoa spec-and-routes\" \"nodemon index.ts\"",
        "start": "cross-env NODE_ENV=development ts-node index.ts",
        "clean": "tsc -b --clean",
        "test": "mocha",
        "lint": "eslint '**/*.{js,ts,tsx}' --quiet --fix",
        "lint:ci": "eslint '**/*.{js,ts,tsx}' --quiet",
        "ci": "yarn clean && yarn lint:ci && tsc -b && yarn test"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            "**/routes.ts",
            "dist",
            "*.d.ts"
        ],
        "execMap": {
            "ts": "ts-node"
        },
        "watch": [
            "./",
            "../../../Source"
        ],
        "ext": "ts"
    },
    "dependencies": {
        "@shared/common": "1.0.0",
        "@dolittle/vanir-backend": "^8.0.0"
    }
}
