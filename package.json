{
    "private": true,
    "workspaces": [
        "Source",
        "Specifications",
        "Samples/Basic/*"
    ],
    "scripts": {
        "prebuild": "yarn clean",
        "postbuild": "yarn lint",
        "clean": "tsc -b --clean",
        "build": "tsc -b Source/tsconfig.json && tsc -b Samples/Basic/Backend/tsconfig.json",
        "test": "mocha",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet",
        "ci": "yarn build && yarn test"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "4.5.0",
        "@typescript-eslint/parser": "4.5.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-header": "^3.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^30.6.4",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prettier": "^3.1.4",
        "mocha": "8.2.1",
        "chai": "4.2.0",
        "sinon": "9.0.3",
        "sinon-chai": "3.5.0",
        "chai-as-promised": "7.1.1",
        "concurrently": "^5.3.0",
        "nodemon": "2.0.4",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typescript": "4.0.5",
        "@types/chai": "4.2.14",
        "@types/chai-as-promised":"7.1.3",
        "@types/mocha":"8.0.4",
        "@types/sinon":"9.0.8",
        "@types/sinon-chai":"3.2.5"
    }
}